<%= form_with(model: video, local: true) do |form| %>
  <% if video.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(video.errors.count, "error") %> prohibited this video from being saved:</h2>

      <ul>
      <% video.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label "Nome" %>
    <%= form.text_field :title, class: "form-control", placeholder: "Digite um nome" %>
  </div>

  <div class="form-group">
    <%= form.label "Descrição" %>
    <%= form.text_area :description, class: "form-control", placeholder: "Digite uma descrição" %>
  </div>

  <div class="form-group">
    <%= form.label "URL da miniatura" %>
    <%= form.text_field :thumbnail, class: "form-control", placeholder: "Insira a url da foto" %>
    <p><small>(Insira a url de uma foto para ser a miniatura do seu video. Ex: https://placeimg.com/300/200/tech).</small></p>
  </div>

  <div class="form-group">
    <%= form.label "URL do vídeo" %>
    <%= form.text_field :url, class: "form-control", placeholder: "Insira uma url do arquivo m3u8" %>
    <p><small>(Insira uma url com o arquivo m3u8 do seu vídeo. Ex: https://content.jwplatform.com/manifests/yp34SRmf.m3u8).</small></p>
  </div>

  <div class="form-group form-check">
    <%= form.check_box :active, class: "form-check-input", id: "is-public-video" %>
    <label class="form-check-label" for="is-public-video">Público?</label>
  </div>

  <div class="field d-none">
    <%= form.label :user_id %>
    <%= form.text_field :user_id, value: current_user.id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
  