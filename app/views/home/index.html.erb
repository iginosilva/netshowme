<h1 class="border-bottom">
  Sejam bem vindos!
</h1>

<% if user_signed_in? && !current_user.videos.exists? %>
  <%= link_to(new_video_path) do %>
    <p class="h2 text-center">
      Que tal criar seu primeiro vídeo? É só clicar aqui!
    </p>
  <% end %>
<% end %>

<div class="row">
  <% @videos.each do |video|%>
    <%= link_to show_video_path(video), data: { turbolinks: false } do %>
      <div class="col-sm-4 my-2">
        <div class="card" style="width: 18rem;">
          <%= image_tag(video.thumbnail, class: "card-img-top", class: "card-img-top") %>
          <div class="card-body text-center">
            <p class="card-text h4 mb-3"><%= video.title %></p>
            <span class="badge badge-pill badge-dark">Autor: <%= video.user.email %></span>
            <span class="badge badge-pill badge-primary"><%= video.view_count %> visualizações</span>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>